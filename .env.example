# ============================================
# Root Repository Scripts Configuration
# ============================================
# This file is for running repository-level scripts only:
#   - scripts/seed-graph.ts
#   - scripts/seed-special-jurisdictions.ts
#   - scripts/test-graph-changes.ts
#   - scripts/apply-migration.ts
#
# For running the demo web application, see:
#   apps/demo-web/.env.local.example
# ============================================

# ============================================
# Memgraph Database (Required for graph seeding scripts)
# ============================================
# Connection to Memgraph for seeding the regulatory knowledge graph
MEMGRAPH_URI=bolt://localhost:7687

# Optional authentication (leave commented if Memgraph has no auth)
# MEMGRAPH_USERNAME=memgraph
# MEMGRAPH_PASSWORD=your_password_here

# ============================================
# Supabase (Required for migration scripts)
# ============================================
# Connection to Supabase for applying database migrations
# Get these values from `supabase status -o env` after running `supabase start`
SUPABASE_URL=http://localhost:54321
SUPABASE_SERVICE_ROLE_KEY=replace_with_local_service_role_key

# ============================================
# OpenTelemetry Observability (Optional)
# ============================================
# Enable comprehensive logging, tracing, and metrics collection
# See docker/OBSERVABILITY.md for setup instructions

# Enable OTEL log exporter (sends logs to OTEL collector)
OTEL_LOGS_ENABLED=false

# OTEL Collector endpoints (start with: cd docker && docker compose up -d otel-collector)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=http://localhost:4318/v1/logs

# Service identification
OTEL_SERVICE_NAME=@reg-copilot/scripts

# Trace sampling (1.0 = 100%, 0.1 = 10%, 0.01 = 1%)
OTEL_TRACES_SAMPLING_RATIO=1.0
OTEL_TRACES_ALWAYS_SAMPLE_ERRORS=true

# Logging configuration
LOG_LEVEL=info
LOG_SAFE_PAYLOADS=true
